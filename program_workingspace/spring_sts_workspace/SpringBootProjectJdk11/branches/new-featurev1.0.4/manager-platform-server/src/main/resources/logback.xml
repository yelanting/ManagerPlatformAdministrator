<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<substitutionProperty name="log.base"
		value="../logs/springbootlog" />

	<jmxConfigurator />

	<appender name="stdout"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%date{yyyy.MM.dd HH:mm:ss}][%-5level] %logger{10} - %msg%n
			</pattern>
		</layout>
	</appender>
	<appender name="logfile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- <Encoding>GBK</Encoding> -->
		<File>${log.base}.log</File>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
<!-- 			<pattern>%date [%thread] -->
<!-- 				%-5level %logger{80} - %msg%n</pattern> -->
			<pattern>[%date{yyyy.MM.dd HH:mm:ss}][%-5level] %logger{10} - %msg%n</pattern>
		</layout>
	</appender>

	<logger name="com.administrator.platform.*">
		<level value="DEBUG" />
	</logger>
	<logger name="org.springframework">
		<level value="WARN" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="DEBUG" />
	</logger>
	<logger name="org.hibernate.cache">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.struts2">
		<level value="ERROR" />
	</logger>
	<logger name="com.opensymphony.xwork2">
		<level value="ERROR" />
	</logger>
	<logger name="com.opensymphony.xwork2.ognl.OgnlValueStack">
		<level value="ERROR" />
	</logger>
	<logger
		name="com.opensymphony.xwork2.interceptor.ExceptionMappingInterceptor">
		<level value="WARN" />
	</logger>
	<root>
		<level value="DEBUG" />
		<appender-ref ref="stdout" />
		<appender-ref ref="logfile" />
	</root>
</configuration>

